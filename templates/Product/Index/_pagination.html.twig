{% set paginationLimits = [3, 6, 9, 12] %}

<div class="ui right floated small header">
    <div class="content">
        <div class="ui inline dropdown sylius-paginate">
            {{ 'sylius.ui.show'|trans }} {{ products.maxPerPage }}
            <i class="dropdown icon"></i>
            <div class="menu">
                {% for limit in paginationLimits|filter(limit => limit != products.maxPerPage) %}
                    {% set path = path(app.request.attributes.get('_route'), app.request.attributes.all('_route_params')|merge(app.request.query.all)|merge({'limit': limit})) %}
                    <a class="item" href="{{ path }}">{{ limit }}</a>
                {% endfor %}
            </div>
        </div>
    </div>
</div>
