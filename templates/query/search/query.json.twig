{
    "bool": {
        "filter": [
            {
                "term": {
                    "enabled": true
                }
            }
        ],
        "should": [
            {
                "nested": {
                    "path": "name",
                    "query": {
                        "match": {
                            "name.{{ localeCode }}": {
                                "query": "{{ searchTerm }}",
                                "boost": 10,
                                "fuzziness": "AUTO",
                                "fuzzy_transpositions": true,
                                "operator": "OR"
                            }
                        }
                    }
                }
            },
            {
                "nested": {
                    "path": "description",
                    "query": {
                        "match": {
                            "description.{{ localeCode }}": {
                                "query": "{{ searchTerm }}",
                                "boost": 5,
                                "fuzziness": "AUTO",
                                "fuzzy_transpositions": true,
                                "operator": "OR"
                            }
                        }
                    }
                }
            }
        ]
    }
}
