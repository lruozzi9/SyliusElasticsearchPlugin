{
    "attributes": {
        "nested": {
            "path": "attributes"
        },
        "aggs": {
            "filtered-attributes": {
                "filter": {
                    "bool": {
                        "filter": [
                            {
                                "term": {
                                    "attributes.filterable": true
                                }
                            }
                        ]
                    }
                },
                "aggs": {
                    "attribute": {
                        "terms": {
                            "field": "attributes.code"
                        },
                        "aggs": {
                            "values": {
                                "terms": {
                                    "field": "attributes.values.values"
                                }
                            },
                            "label": {
                                "terms": {
                                    "field": "attributes.name.{{localeCode}}"
                                }
                            }
                        }
                    }
                }
            }
        },
        "meta": {
            "type": "{{ constant('\\Webgriffe\\SyliusElasticsearchPlugin\\Model\\AttributeFilter::TYPE') }}"
        }
    }
}
