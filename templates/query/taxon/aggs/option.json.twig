{
    "{{ option.code }}": {
        "nested": {
            "path": "options"
        },
        "aggs": {
            "filter_by_key": {
                "filter": {
                    "bool": {
                        "filter": [
                            {
                                "term": {
                                    "options.code": "{{ option.code }}"
                                }
                            }
                        ]
                    }
                },
                "aggs": {
                    "values": {
                        "nested": {
                            "path": "options.values"
                        },
                        "aggs": {
                            "values": {
                                "terms": {
                                    "field": "options.values.code"
                                }
                            },
                            "name": {
                                "nested": {
                                    "path": "options.values.name"
                                },
                                "aggs": {
                                    "filter_value_name_by_locale": {
                                        "filter": {
                                            "bool": {
                                                "filter": [
                                                    {
                                                        "term": {
                                                            "options.values.name.locale": "{{ localeCode|lower }}"
                                                        }
                                                    }
                                                ]
                                            }
                                        },
                                        "aggs": {
                                            "values": {
                                                "terms": {
                                                    "field": "options.values.name.value"
                                                }
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "name": {
                        "nested": {
                            "path": "options.name"
                        },
                        "aggs": {
                            "filter_name_by_locale": {
                                "filter": {
                                    "bool": {
                                        "filter": [
                                            {
                                                "term": {
                                                    "options.name.locale": "{{ localeCode|lower }}"
                                                }
                                            }
                                        ]
                                    }
                                },
                                "aggs": {
                                    "values": {
                                        "terms": {
                                            "field": "options.name.value"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "meta": {
            "type": "{{ constant('\\Webgriffe\\SyliusElasticsearchPlugin\\Model\\OptionFilter::TYPE') }}"
        }
    }
}
