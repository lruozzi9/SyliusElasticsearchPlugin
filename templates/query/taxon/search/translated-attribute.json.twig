{% for filter in filters %}
{
    "nested": {
        "path": "translated-attributes",
        "query": {
            "bool": {
                "filter": [
                    {
                        "term": {
                            "translated-attributes.code": "{{ filter.code }}"
                        }
                    },
                    {
                        "term": {
                            "translated-attributes.values.{{ localeCode }}.text-value": "{{ filter.value }}"
                        }
                    }
                ]
            }
        }
    }
}{% if not loop.last %},{% endif %}
{% endfor %}
