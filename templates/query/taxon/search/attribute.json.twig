{% for filter in filters %}
    {
        "nested": {
            "path": "attributes",
            "query": {
                "bool": {
                    "filter": [
                        {
                            "term": {
                                "attributes.code": "{{ filter.code }}"
                            }
                        },
                        {
                            "term": {
                                "attributes.values.values": "{{ filter.value }}"
                            }
                        }
                    ]
                }
            }
        }
    }{% if not loop.last %},{% endif %}
{% endfor %}
